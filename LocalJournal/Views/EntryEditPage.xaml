<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:typeViews="clr-namespace:LocalJournal.Views.EntryTypes"
             mc:Ignorable="d"
             x:Class="LocalJournal.Views.EntryEditPage"
             Title="Edit Entry">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" Priority="0" />
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <typeViews:TextEntryView x:Name="EntryEditView" />
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
